@page
@model EcomerceRazo.Pages.Categories.IndexModel
<div class="container">
   
    <div class="row pt-4 pb-3">
        <div class="col-md-6 text-primary">
            <h3>Category List</h3>
        </div>
        <div class="col-md-6 text-end ">
            <a  class="btn btn-primary"  asp-Page="/Categories/Create">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
 </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.categories.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a  asp-Page="/Categories/Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                            </a>


                        <a  asp-Page="/Categories/Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

