@page
@model EcomerceRazo.Pages.Categories.DeleteModel
<form method="post">
    <input asp-for="Category.id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*  <div asp-validation-summary="All"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for=Category.Name class="p-0"></label>
            <input asp-for=Category.Name class="form-control" readonly />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Category.DisplayOrder class="p-0"></label>
            <input asp-for=Category.DisplayOrder class="form-control" readonly />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit"  class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a  asp-Page="/Categories/Index" class="btn btn-secondary border border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
